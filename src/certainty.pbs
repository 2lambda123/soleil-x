#!/bin/bash -eu
#PBS -N soleil

cd "$SOLEIL_DIR"/src

if grep -Fxq gpu-202-3 "$PBS_NODEFILE"; then
    echo "Running on bad node, please try again" >&2
    exit 1
fi

mpiexec -np $NUM_NODES --bind-to none -x LD_LIBRARY_PATH \
    ./soleil.exec $ARGS \
    -ll:cpu 0 -ll:ocpu 1 -ll:onuma 0 -ll:okindhack -ll:othr 11 -ll:gpu 4 \
    -ll:csize 30000
